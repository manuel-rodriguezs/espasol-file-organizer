<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="409.0" prefWidth="647.0" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espasol.fileorganizer.Controller">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="165.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="283.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="76.0" prefWidth="76.0" />
    </columnConstraints>

    <Label text="Organizador de Ficheros Espasol" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" top="20" />
        </GridPane.margin>
    </Label>

    <Label text="¿Qué buscamos?" GridPane.rowIndex="1">
    </Label>
    <TextField fx:id="filterField" prefHeight="40" text="EUE*.pdf" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Carpeta donde buscar:" GridPane.columnIndex="0" GridPane.rowIndex="2">
    </Label>
    <TextField fx:id="originField" disable="true" editable="false" focusTraversable="false" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />


    <Label text="Carpeta destino:" GridPane.columnIndex="0" GridPane.rowIndex="3">
    </Label>
    <TextField fx:id="destField" disable="true" editable="false" focusTraversable="false" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />


    <Button fx:id="btnOrigen" defaultButton="true" layoutX="284.0" layoutY="310.0" onAction="#selectOriginPath" prefHeight="40" prefWidth="100" text="Origen" GridPane.columnIndex="2" GridPane.rowIndex="2">
        <graphic>
            <FontAwesomeIcon iconName="FOLDER_OPEN_ALT" />
        </graphic>
    </Button>
    <Button fx:id="btnDestino" defaultButton="true" layoutX="530.0" layoutY="140.0" onAction="#selectDestPath" prefHeight="40" prefWidth="100" text="Destino" GridPane.columnIndex="2" GridPane.rowIndex="3">
        <graphic>
            <FontAwesomeIcon iconName="FOLDER_OPEN_ALT" />
        </graphic>
    </Button>
    <Button fx:id="btnBuscar" defaultButton="true" onAction="#find" prefHeight="40" prefWidth="100" text="Buscar" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" top="20" />
        </GridPane.margin>
        <graphic>
            <FontAwesomeIcon iconName="SEARCH" />
        </graphic>
    </Button>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
